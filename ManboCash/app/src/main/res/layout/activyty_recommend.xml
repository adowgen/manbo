<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/corlor_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/body_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추천인 코드 입력하기"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/home_cash_"
        android:fontFamily="@font/spoqa_han_sans_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/body_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추천할실 분의 추천인 코드를\n입력하시면 뭐 줌?"
        android:textSize="17dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/home_cash_"
        android:fontFamily="@font/kopubworld_dotum_bold"
        app:layout_constraintTop_toBottomOf="@+id/body_text_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <EditText
        android:id="@+id/height_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:hint="추천인 코드"
        app:layout_constraintTop_toBottomOf="@id/body_text_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_manbo_alpha50"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/height_et"/>



    <Button
        android:id="@+id/recommend_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_manbo_alpha50"
        android:text="건너뛰기"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/home_cash_"
        android:fontFamily="@font/kopubworld_dotum_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>