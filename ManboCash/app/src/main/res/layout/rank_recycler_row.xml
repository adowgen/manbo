<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginRight="2dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:background="@color/color_manbo_alpha70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></FrameLayout>


        <TextView
            android:id="@+id/recycle_row_rank_tv"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:gravity="center"
            android:text="777"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/recycle_row_pr_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="0.1"/>

        <ImageView
            android:id="@+id/recycle_row_pr_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0.1"
            app:layout_constraintLeft_toRightOf="@+id/recycle_row_rank_tv"
            app:layout_constraintRight_toLeftOf="@+id/recycle_row_id_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycle_row_id_tv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:gravity="left|center"
            android:text="테스트"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintLeft_toRightOf="@+id/recycle_row_pr_img"
            app:layout_constraintRight_toLeftOf="@+id/recycle_row_walkcount_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycle_row_walkcount_tv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:gravity="right|center"
            android:text="12,320 걸음"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintLeft_toRightOf="@+id/recycle_row_id_tv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>